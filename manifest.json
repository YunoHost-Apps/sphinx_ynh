{
    "name": "Sphinx",
    "id": "sphinx",
    "packaging_format": 1,
    "description": {
        "en": "Sphinx package for YunoHost.",
        "fr": "Sphinx pour YunoHost."
    },
    "version": "2.1.2",
    "url": "https://github.com/sphinx-doc/sphinx",
    "license": "free",
    "maintainer": {
        "name": "liberodark",
        "email": "liberodark@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Sphinx",
                    "fr": "Choisissez un nom de domaine pour Sphinx"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Sphinx /Sphinx is accepted",
                    "fr": "Choisissez un chemin pour Sphinx /Sphinx est accept√©"
                },
                "example": "/",
                "default": "/"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "default": "true"
            },
            {
                "name": "ad_name",
                "type": "ad_name",
                "ask": {
                    "en": "Enter your project name ?",
                    "fr": "Entrer votre nom de projet ?",
                },
                "example": "my project"
            },
            {
                "name": "ad_author",
                "type": "ad_author",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "example": "liberodark"
            },
            {
                "name": "ad_lang",
                "type": "ad_lang",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "choices": ["fr", "es", "en"],
                "default": "en"
            }
        ]
    }
}
